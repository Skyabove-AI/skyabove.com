---
import "../styles/global.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/jetbrains-mono/400.css";

import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import SEO from "../components/SEO.astro";
import ScrollEngine from "../components/ScrollEngine.astro";

interface Props {
  title: string;
  description?: string;
  noindex?: boolean;
  ogImage?: string;
}

const {
  title,
  description = "SkyAbove - AI-Native Marketing Agency",
  noindex = false,
  ogImage,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      noindex={noindex}
      ogImage={ogImage}
    />
  </head>
  <body
    class="bg-black text-white font-sans antialiased overflow-x-hidden selection:bg-purple-500/30 selection:text-purple-200"
  >
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
    <ScrollEngine />
  </body>
</html>
