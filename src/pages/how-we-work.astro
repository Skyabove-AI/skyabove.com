---
import Layout from "../layouts/Layout.astro";
import Timeline from "../components/Timeline.astro";
import CTASection from "../components/CTASection.astro";

const phases = [
    {
        days: "15 Days",
        title: "Quick Wins + Instrumentation",
        description:
            "We don't wait months to show value. In the first 15 days, we fix your data foundation and launch high-impact experiments.",
        items: [
            "Audit GA4/GTM/Server-side tracking",
            "Launch initial creative tests",
            "Establish reporting dashboard",
            "Identify low-hanging fruit optimizations",
        ],
    },
    {
        days: "30 Days",
        title: "Workflows + Automations",
        description:
            "Once the foundation is set, we start building the machine. We document SOPs and automate repetitive tasks.",
        items: [
            "Build custom GPTs for team",
            "Automate reporting workflows",
            "Deploy dynamic creative systems",
            "Scale winning experiments",
        ],
    },
    {
        days: "60 Days",
        title: "Agentic Systems + Compounding",
        description:
            "This is where the magic happens. We deploy autonomous agents to handle complex tasks and let the system compound.",
        items: [
            "Launch autonomous research agents",
            "Full-funnel personalization",
            "Predictive modeling",
            "Expansion to new channels",
        ],
    },
];
---

<Layout title="How We Work - SkyAbove">
    <div class="pt-32 pb-20 bg-sky-navy text-center">
        <div class="container-custom">
            <h1 class="text-5xl md:text-7xl font-bold mb-6">The System</h1>
            <p class="text-xl text-sky-muted max-w-2xl mx-auto">
                We don't do random acts of marketing. We build a predictable,
                scalable growth engine.
            </p>
        </div>
    </div>

    <Timeline />

    <section class="section-padding bg-sky-dark relative overflow-hidden">
        <div class="container-custom">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-5xl font-bold mb-4">
                    The 60-Day Sprint
                </h2>
                <p class="text-sky-muted text-lg">A clear path to value.</p>
            </div>

            <div class="space-y-8">
                {
                    phases.map((phase) => (
                        <div class="bg-sky-card/30 border border-sky-card rounded-2xl p-8 md:p-12 relative overflow-hidden group hover:border-sky-blue/30 transition-all">
                            <div class="absolute top-0 right-0 p-8 opacity-10 font-bold text-9xl text-white select-none pointer-events-none group-hover:opacity-20 transition-opacity">
                                {phase.days.replace(" Days", "")}
                            </div>

                            <div class="relative z-10 flex flex-col md:flex-row gap-8 md:gap-16">
                                <div class="md:w-1/3">
                                    <span class="inline-block px-4 py-2 rounded-full bg-sky-blue/10 text-sky-blue font-bold text-sm mb-4 border border-sky-blue/20">
                                        {phase.days}
                                    </span>
                                    <h3 class="text-3xl font-bold text-white mb-4">
                                        {phase.title}
                                    </h3>
                                    <p class="text-sky-muted text-lg">
                                        {phase.description}
                                    </p>
                                </div>

                                <div class="md:w-2/3 border-t md:border-t-0 md:border-l border-sky-card/50 pt-8 md:pt-0 md:pl-16">
                                    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                        {phase.items.map((item) => (
                                            <li class="flex items-start space-x-3">
                                                <span class="text-sky-blue mt-1">
                                                    âœ“
                                                </span>
                                                <span class="text-sky-muted font-medium">
                                                    {item}
                                                </span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <CTASection />
</Layout>
