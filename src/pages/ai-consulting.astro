---
import Layout from "../layouts/Layout.astro";
import CTASection from "../components/CTASection.astro";
import ServiceSection from "../components/ServiceSection.astro";

const services = [
    {
        title: "Strategy & Opportunity Mapping",
        description:
            "This is high-level but extremely valuable. Companies struggle to move from proof-of-concept to production scale. We solve that.",
        icon: "üó∫Ô∏è",
        deliverables: [
            "AI Readiness Assessment",
            "Workflow Audits",
            "ROI Analysis",
            "Use-Case Prioritization",
            "Automation Strategy",
        ],
    },
    {
        title: "AI Implementation & Build",
        description:
            'This is the "make it real" phase. We combine humans and AI agents to execute faster with smaller teams.',
        icon: "‚öôÔ∏è",
        deliverables: [
            "AI Agents for Sales/Support",
            "Automation Pipelines",
            "Internal Copilots",
            "Marketing Content Systems",
            "Predictive Analytics",
        ],
    },
    {
        title: "AI Operations & Optimization",
        description:
            "After launch, the real value is unlocked through continuous optimization and refinement.",
        icon: "üìà",
        deliverables: [
            "Model Monitoring",
            "Prompt Engineering Optimization",
            "Cost Management",
