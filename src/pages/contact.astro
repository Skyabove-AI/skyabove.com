---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact - SkyAbove">
    <div class="pt-32 pb-20 bg-sky-navy min-h-screen relative overflow-hidden">
        <!-- Abstract background elements -->
        <div
            class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
        >
            <div
                class="absolute top-[10%] right-[10%] w-[500px] h-[500px] bg-sky-blue/5 rounded-full blur-[100px]"
            >
            </div>
            <div
                class="absolute bottom-[10%] left-[10%] w-[300px] h-[300px] bg-sky-amber/5 rounded-full blur-[80px]"
            >
            </div>
        </div>

        <div
            class="container-custom relative z-10 grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24"
        >
            <!-- Text Column -->
            <div class="lg:col-span-5 space-y-8">
                <h1 class="text-4xl md:text-6xl font-bold">
                    Let's Build Your Machine.
                </h1>
                <p class="text-xl text-sky-muted leading-relaxed">
                    Ready to stop guessing and start engineering your growth?
                    Fill out the form, and we'll set up a time to talk strategy.
                </p>

                <div class="pt-8 space-y-6">
                    <div class="flex items-start space-x-4">
                        <div
                            class="w-12 h-12 bg-sky-card rounded-lg flex items-center justify-center text-xl border border-sky-card/50"
                        >
                            üìß
                        </div>
                        <div>
                            <h3 class="text-white font-bold text-lg">
                                Email Us
                            </h3>
                            <p class="text-sky-muted">hello@skyabove.com</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-4">
                        <div
                            class="w-12 h-12 bg-sky-card rounded-lg flex items-center justify-center text-xl border border-sky-card/50"
                        >
                            üìç
                        </div>
                        <div>
                            <h3 class="text-white font-bold text-lg">HQ</h3>
                            <p class="text-sky-muted">Bastrop, Texas</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Column -->
            <div class="lg:col-span-7">
                <form
                    class="bg-sky-card/30 backdrop-blur-md border border-sky-card p-8 md:p-10 rounded-2xl shadow-2xl space-y-6"
                >
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label
                                for="name"
                                class="text-sm font-bold text-sky-muted uppercase tracking-wider"
                                >Name</label
                            >
                            <input
                                type="text"
                                id="name"
                                name="name"
                                class="w-full bg-sky-navy/50 border border-sky-card rounded-lg p-3 text-white focus:border-sky-blue focus:ring-1 focus:ring-sky-blue outline-none transition-all"
                                placeholder="John Doe"
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="email"
                                class="text-sm font-bold text-sky-muted uppercase tracking-wider"
                                >Work Email</label
                            >
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="w-full bg-sky-navy/50 border border-sky-card rounded-lg p-3 text-white focus:border-sky-blue focus:ring-1 focus:ring-sky-blue outline-none transition-all"
                                placeholder="john@company.com"
                            />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label
                                for="company"
                                class="text-sm font-bold text-sky-muted uppercase tracking-wider"
                                >Company</label
                            >
                            <input
                                type="text"
                                id="company"
                                name="company"
                                class="w-full bg-sky-navy/50 border border-sky-card rounded-lg p-3 text-white focus:border-sky-blue focus:ring-1 focus:ring-sky-blue outline-none transition-all"
                                placeholder="Acme Inc."
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="website"
                                class="text-sm font-bold text-sky-muted uppercase tracking-wider"
                                >Website</label
                            >
                            <input
                                type="url"
                                id="website"
                                name="website"
                                class="w-full bg-sky-navy/50 border border-sky-card rounded-lg p-3 text-white focus:border-sky-blue focus:ring-1 focus:ring-sky-blue outline-none transition-all"
                                placeholder="https://..."
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label
                            for="budget"
                            class="text-sm font-bold text-sky-muted uppercase tracking-wider"
                            >Monthly Budget Range</label
                        >
                        <select
                            id="budget"
                            name="budget"
                            class="w-full bg-sky-navy/50 border border-sky-card rounded-lg p-3 text-white focus:border-sky-blue focus:ring-1 focus:ring-sky-blue outline-none transition-all appearance-none"
                        >
                            <option value="" disabled selected
                                >Select a range...</option
                            >
                            <option value="5k-10k">$5k - $10k</option>
                            <option value="10k-25k">$10k - $25k</option>
                            <option value="25k-50k">$25k - $50k</option>
                            <option value="50k+">$50k+</option>
                        </select>
                    </div>

                    <div class="space-y-2">
                        <label
                            for="message"
                            class="text-sm font-bold text-sky-muted uppercase tracking-wider"
                            >Tell us about your goals</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            class="w-full bg-sky-navy/50 border border-sky-card rounded-lg p-3 text-white focus:border-sky-blue focus:ring-1 focus:ring-sky-blue outline-none transition-all"
                            placeholder="We are looking to scale our paid social..."
                        ></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full py-4 text-lg font-bold text-white bg-sky-blue rounded-lg hover:bg-sky-blue/90 shadow-[0_0_20px_rgba(59,130,246,0.3)] transition-all hover:-translate-y-1"
                    >
                        Book a Strategy Call
                    </button>
                </form>
            </div>
        </div>
    </div>
</Layout>
