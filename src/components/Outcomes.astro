---
const tabs = [
    {
        id: "roi",
        label: "Predictable Revenue",
        content: {
            title: "If an agency can't tie AI to revenue, it's theater.",
            points: [
                "Lower CAC with smarter targeting",
                "Higher ROAS through automated optimization",
                "More SQLs per rep without more spend",
                "Attribution you can actually trust",
            ],
        },
    },
    {
        id: "speed",
        label: "Speed That Compounds",
        content: {
            title: "Ship faster. Learn faster. Win faster.",
            points: [
                "10x more experiments per month",
                "Creative iterations in hours, not weeks",
                "Insight to asset to live in one sprint",
            ],
        },
    },
    {
        id: "plan",
        label: "A Practical Plan",
        content: {
            title: "No fluff. Just a roadmap to compound growth.",
            points: [
                "15 days: Quick wins + instrumentation",
                "30 days: Workflows + automations deployed",
                "60 days: Agentic systems + compounding returns",
            ],
        },
    },
    {
        id: "stack",
        label: "Plugs Into Your Stack",
        content: {
            title: "We don't bring another tool. We plug into yours.",
            points: [
                "Salesforce, HubSpot, Zendesk",
                "GA4, Looker, BigQuery, Snowflake",
                "Google Ads, Meta, TikTok, LinkedIn",
            ],
        },
    },
];
---

<section class="section-padding bg-sky-dark relative overflow-hidden">
    <div class="container-custom">
        <div class="mb-16" data-reveal="up">
            <h2 class="text-3xl md:text-5xl font-bold mb-8 leading-tight">
                Your Board Doesn't Want AI. <br class="hidden md:block" />They
                Want Results.
            </h2>
            <div
                class="text-xl md:text-2xl text-sky-muted max-w-2xl leading-relaxed"
            >
                <p class="mb-6 border-b border-sky-card/50 pb-4 inline-block">
                    They're buying:
                </p>
                <ul class="space-y-5 text-white font-medium pl-2" data-stagger>
                    <li class="flex items-center space-x-4" data-reveal="left">
                        <span
                            class="flex-shrink-0 w-8 h-8 rounded-full bg-sky-blue/10 flex items-center justify-center text-sky-blue text-lg"
                            >✦</span
                        >
                        <span>Predictable Revenue</span>
                    </li>
                    <li class="flex items-center space-x-4" data-reveal="left">
                        <span
                            class="flex-shrink-0 w-8 h-8 rounded-full bg-sky-blue/10 flex items-center justify-center text-sky-blue text-lg"
                            >✦</span
                        >
                        <span>De-risked Growth</span>
                    </li>
                    <li class="flex items-center space-x-4" data-reveal="left">
                        <span
                            class="flex-shrink-0 w-8 h-8 rounded-full bg-sky-blue/10 flex items-center justify-center text-sky-blue text-lg"
                            >✦</span
                        >
                        <span>Speed That Compounds</span>
                    </li>
                    <li class="flex items-center space-x-4" data-reveal="left">
                        <span
                            class="flex-shrink-0 w-8 h-8 rounded-full bg-sky-blue/10 flex items-center justify-center text-sky-blue text-lg"
                            >✦</span
                        >
                        <span>Order From Chaos</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Tab Navigation (Desktop) -->
        <div class="flex flex-col lg:flex-row gap-12" data-reveal="up">
            <div class="lg:w-1/3 flex flex-col space-y-2">
                {
                    tabs.map((tab, index) => (
                        <button
                            class={`text-left px-6 py-4 rounded-lg text-lg font-medium transition-all duration-300 border-l-2 ${index === 0 ? "bg-sky-blue/10 text-white border-sky-blue" : "text-sky-muted border-transparent hover:bg-sky-card hover:text-white"}`}
                            data-tab={tab.id}
                        >
                            {tab.label}
                        </button>
                    ))
                }
            </div>

            <!-- Tab Content Area -->
            <div
                class="lg:w-2/3 min-h-[400px] relative bg-sky-card/30 rounded-2xl p-8 md:p-12 border border-sky-card backdrop-blur-sm"
            >
                {
                    tabs.map((tab, index) => (
                        <div
                            id={tab.id}
                            class={`transition-all duration-500 ${index === 0 ? "block" : "hidden"}`}
                        >
                            <h3 class="text-2xl md:text-3xl font-bold mb-6 text-white">
                                {tab.content.title}
                            </h3>
                            <ul class="space-y-4">
                                {tab.content.points.map((point) => (
                                    <li class="flex items-start space-x-3 text-lg text-sky-muted">
                                        <span class="text-sky-blue mt-1">
                                            ✔
                                        </span>
                                        <span>{point}</span>
                                    </li>
                                ))}
                            </ul>
                            <div class="mt-8 pt-8 border-t border-sky-card/50">
                                <a
                                    href="/how-we-work"
                                    class="text-sky-blue font-bold hover:text-white transition-colors inline-flex items-center group"
                                >
                                    See the full process{" "}
                                    <span class="ml-2 transform group-hover:translate-x-1 transition-transform">
                                        →
                                    </span>
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<script>
    const buttons = document.querySelectorAll("[data-tab]");
    const tabContainer = document.querySelector(".lg\\:w-2\\/3");
    const contents = tabContainer
        ? tabContainer.querySelectorAll(":scope > div")
        : [];

    buttons.forEach((btn) => {
        btn.addEventListener("click", () => {
            // Deactivate all buttons
            buttons.forEach((b) => {
                b.className =
                    "text-left px-6 py-4 rounded-lg text-lg font-medium transition-all duration-300 border-l-2 text-sky-muted border-transparent hover:bg-sky-card hover:text-white";
            });
            // Activate clicked button
            btn.className =
                "text-left px-6 py-4 rounded-lg text-lg font-medium transition-all duration-300 border-l-2 bg-sky-blue/10 text-white border-sky-blue";

            // Hide all contents
            contents.forEach((content) => {
                (content as HTMLElement).classList.add("hidden");
                (content as HTMLElement).classList.remove(
                    "block",
                    "tab-content-enter",
                );
            });

            // Show selected content with animation
            const tabId = btn.getAttribute("data-tab");
            const activeContent = document.getElementById(tabId!);
            if (activeContent) {
                activeContent.classList.remove("hidden");
                activeContent.classList.add("block", "tab-content-enter");
            }
        });
    });
</script>
