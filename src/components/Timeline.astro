    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      {steps.map((step, index) => (
        <div class="relative group">
          <!-- Step Number -->
          <div class="text-8xl font-bold text-sky-card absolute -top-10 -left-6 z-0 opacity-50 group-hover:text-sky-card/80 transition-colors select-none">
            {step.number}
          </div>
          
          <!-- Content Card -->
          <div class="relative z-10 pt-8 pl-4">
             <div class="w-16 h-16 bg-sky-navy border border-sky-blue/30 rounded-full flex items-center justify-center text-3xl mb-6 shadow-xl group-hover:border-sky-blue group-hover:bg-sky-blue/10 transition-all duration-300">
               {step.icon}
             </div>
             
             <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-sky-blue transition-colors">
               {step.title}
             </h3>
             
             <p class="text-sky-muted leading-relaxed">
               {step.description}
             </p>
          </div>
          
          <!-- Mobile Connector -->
          {index !== steps.length - 1 && (
            <div class="lg:hidden absolute left-12 top-24 bottom-[-3rem] w-0.5 bg-sky-card"></div>
          )}
        </div>
      ))}
    </div>
    
    <div class="mt-20 text-center">
