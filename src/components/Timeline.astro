<section class="section-padding bg-sky-dark relative overflow-hidden">
  <!-- Connecting Line (Desktop) -->
  <div class="hidden lg:block absolute top-[40%] left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-sky-blue/30 to-transparent z-0"></div>

  <div class="container-custom relative z-10">
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">How We Work</h2>
