---
const steps = [
  {
    number: "01",
    title: "Audit + Instrument",
    description: "We fix what's broken in tracking, measurement, and data flow. Ground truth before growth.",
    icon: "üìä"
  },
  {
    number: "02",
    title: "Build Workflows",
    description: "We create documented AI SOPs and automations across your stack. Map the human-AI loop.",
    icon: "‚öôÔ∏è"
  },
  {
    number: "03",
    title: "Ship Capabilities",
    description: "We deploy custom agents and agentic systems that run on top of your verified data.",
    icon: "üöÄ"
  },
  {
    number: "04",
    title: "Compound",
    description: "Every month, the system gets smarter. More experiments, better data, tighter loops.",
    icon: "üìà"
  },
];
---

<section class="section-padding bg-sky-dark relative overflow-hidden">
  <!-- Animated SVG Connecting Line (Desktop) -->
  <div class="hidden lg:block absolute top-[40%] left-0 w-full z-0">
    <svg class="w-full h-1" viewBox="0 0 1200 4" preserveAspectRatio="none">
      <line
        x1="0" y1="2" x2="1200" y2="2"
        stroke="url(#lineGradient)"
        stroke-width="2"
        class="draw-line-animated"
        stroke-dasharray="1200"
        stroke-dashoffset="1200"
      />
      <defs>
        <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" stop-color="transparent" />
          <stop offset="30%" stop-color="rgba(59,130,246,0.3)" />
          <stop offset="70%" stop-color="rgba(59,130,246,0.3)" />
          <stop offset="100%" stop-color="transparent" />
        </linearGradient>
      </defs>
    </svg>
  </div>

  <div class="container-custom relative z-10">
    <div class="text-center mb-20" data-reveal="up">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">From Chaos to Compound Growth in 60 Days</h2>
      <p class="text-sky-muted text-lg max-w-2xl mx-auto">
        A structured process to move from noise to a self-improving growth engine.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12" data-stagger>
      {steps.map((step, index) => (
        <div class="relative group" data-reveal="up">
          <!-- Step Number -->
          <div class="text-8xl font-bold text-sky-card absolute -top-10 -left-6 z-0 opacity-50 group-hover:text-sky-card/80 transition-colors select-none">
            {step.number}
          </div>

          <!-- Content Card -->
          <div class="relative z-10 pt-8 pl-4">
             <div
               class="w-16 h-16 bg-sky-navy border border-sky-blue/30 rounded-full flex items-center justify-center text-3xl mb-6 shadow-xl group-hover:border-sky-blue group-hover:bg-sky-blue/10 transition-all duration-300"
               style="transition-timing-function: var(--ease-spring);"
             >
               {step.icon}
             </div>

             <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-sky-blue transition-colors">
               {step.title}
             </h3>

             <p class="text-sky-muted leading-relaxed">
               {step.description}
             </p>
          </div>

          <!-- Mobile Connector -->
          {index !== steps.length - 1 && (
            <div class="lg:hidden absolute left-12 top-24 bottom-[-3rem] w-0.5 bg-sky-card"></div>
          )}
        </div>
      ))}
    </div>

    <div class="mt-20 text-center" data-reveal="up">
        <a href="/how-we-work" class="btn-magnetic px-8 py-4 text-base font-bold text-white border border-sky-card rounded-lg hover:bg-sky-card/50 transition-all hover:border-sky-blue/30 inline-block">
            See the full methodology
        </a>
    </div>
  </div>
</section>

<script>
  // Trigger line draw when section is in view
  const timelineSection = document.querySelector('.draw-line-animated');
  if (timelineSection) {
    const lineObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          (entry.target as HTMLElement).style.animation = 'draw-line 2s cubic-bezier(0.19, 1, 0.22, 1) forwards';
          lineObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.3 });
    lineObserver.observe(timelineSection);
  }
</script>
