---

<section class="section-padding bg-black relative border-t border-white/10">
  <div class="container-custom">
    <div class="mb-16 text-center" data-reveal="up">
      <h2 class="text-4xl md:text-6xl font-bold mb-6 text-white">The Infrastructure Behind 3.8x ROAS</h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        We don't run ads. We build the machine that makes every dollar compound.
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6" data-stagger>
      {capabilities.map((cap, index) => (
        <div
          class={`group relative ${cap.span} bg-[#0A0A0A] border border-white/10 rounded-3xl p-8 hover:border-purple-500/30 transition-all duration-500 overflow-hidden card-tilt`}
          data-reveal="scale"
        >
           <!-- Hover Gradient -->
           <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

           <div class="relative z-10 flex flex-col h-full justify-between">
               <div>
                   <div class="w-12 h-12 bg-white/5 rounded-2xl flex items-center justify-center text-2xl mb-6 border border-white/5 group-hover:scale-110 transition-transform duration-300" style="transition-timing-function: var(--ease-spring);">
                       {cap.icon}
                   </div>
                   <h3 class="text-2xl font-bold text-white mb-1 group-hover:text-purple-400 transition-colors">{cap.title}</h3>
                   <p class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4">{cap.subtitle}</p>
                   <p class="text-gray-400 leading-relaxed text-sm">
                       {cap.description}
                   </p>
               </div>

               <div class="flex justify-end mt-6 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-2 group-hover:translate-y-0 text-purple-400">
                   <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
               </div>
           </div>
        </div>
      ))}
    </div>
  </div>
</section>
