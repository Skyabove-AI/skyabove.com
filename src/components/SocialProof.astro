---
const partners = [
    "Fullman Firm",
    "IPTalons",
    "SPHA",
    "Forester Group",
    "RosaTex",
    "Titan",
    "Political OS",
];
---

<section
    class="py-10 border-y border-sky-card/30 bg-sky-dark overflow-hidden relative"
    data-reveal="up"
>
    <div
        class="absolute inset-0 z-10 pointer-events-none bg-gradient-to-r from-sky-dark via-transparent to-sky-dark"
    >
    </div>

    <div
        class="marquee-track flex items-center space-x-16 animate-infinite-scroll whitespace-nowrap"
    >
        <!-- First Loop -->
        {
            partners.map((partner) => (
                <div class="text-2xl font-bold text-sky-muted/50 uppercase tracking-widest flex items-center space-x-4 hover:text-sky-muted/80 transition-colors duration-300">
                    <svg
                        class="w-8 h-8 opacity-50"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                    <span>{partner}</span>
                </div>
            ))
        }
        <!-- Duplicate for smooth loop -->
        {
            partners.map((partner) => (
                <div class="text-2xl font-bold text-sky-muted/50 uppercase tracking-widest flex items-center space-x-4 hover:text-sky-muted/80 transition-colors duration-300">
                    <svg
                        class="w-8 h-8 opacity-50"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                    <span>{partner}</span>
                </div>
            ))
        }
        <!-- Duplicate again for wide screens -->
        {
            partners.map((partner) => (
                <div class="text-2xl font-bold text-sky-muted/50 uppercase tracking-widest flex items-center space-x-4 hover:text-sky-muted/80 transition-colors duration-300">
                    <svg
                        class="w-8 h-8 opacity-50"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                    <span>{partner}</span>
                </div>
            ))
        }
    </div>
</section>

<style>
    .animate-infinite-scroll {
        animation: scroll 30s linear infinite;
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-33.33%);
        }
    }
</style>
