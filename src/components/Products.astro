---
const products = [
  {
    title: "AI Visibility Audit",
    description: "Scan how your brand appears across ChatGPT, Perplexity, and Gemini. Get a scored report with recommendations for AEO.",
    cta: "Get Your Free Audit",
    image: "dashboard",
  },
  {
    title: "Brand Voice Engine",
    description: "A custom prompt architecture and content system built around your brand. Produces on-brand content at scale without the generic feel.",
    cta: "Explore",
    image: "abstract",
  },
  {
    title: "Growth Dashboard",
    description: "A unified analytics dashboard that pulls data from your ad platforms, CRM, and GA4 into a single source of truth.",
    cta: "Explore",
    image: "dashboard",
  }
];
---

<section class="section-padding bg-sky-navy relative border-y border-sky-card/30">
  <div class="container-custom">
    <div class="mb-16 md:flex justify-between items-end reveal-on-scroll">
      <div class="max-w-2xl">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">Our Products</h2>
        <p class="text-xl text-sky-muted">
          Proprietary tools we've built to give clients a compounding advantage.
        </p>
      </div>
      <div class="hidden md:block">
          <!-- Optional top decoration or link -->
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {products.map((prod, index) => (
        <div class={`reveal-on-scroll group bg-sky-dark border border-sky-card rounded-2xl overflow-hidden hover:border-sky-blue/30 transition-all ${index === 1 ? 'delay-100' : index === 2 ? 'delay-200' : ''}`}>
           <!-- Product Visual Area -->
           <div class="h-48 bg-sky-card/20 relative flex items-center justify-center border-b border-sky-card/30 group-hover:bg-sky-card/30 transition-colors">
               <!-- Placeholder UI -->
               {prod.image === 'dashboard' ? (
                   <div class="w-3/4 h-24 bg-sky-navy rounded border border-sky-card/50 shadow-lg p-2 space-y-2 opacity-70 group-hover:opacity-100 group-hover:scale-105 transition-all">
                       <div class="flex gap-2">
                           <div class="w-1/3 h-full bg-sky-card/50 rounded"></div>
                           <div class="w-2/3 h-full space-y-1">
                               <div class="h-2 w-full bg-sky-card/50 rounded"></div>
                               <div class="h-2 w-1/2 bg-sky-card/50 rounded"></div>
                           </div>
                       </div>
                   </div>
               ) : (
                   <div class="w-20 h-20 bg-gradient-to-tr from-sky-blue/20 to-sky-amber/20 rounded-full blur-xl group-hover:blur-md transition-all"></div>
               )}
           </div>
           
           <div class="p-8">
               <h3 class="text-2xl font-bold text-white mb-3">{prod.title}</h3>
               <p class="text-sky-muted text-sm leading-relaxed mb-6 min-h-[60px]">
                   {prod.description}
               </p>
               <button class="flex items-center space-x-2 text-sky-blue font-bold text-sm group-hover:text-white transition-colors">
                   <span>{prod.cta}</span>
                   <span class="transform group-hover:translate-x-1 transition-transform">â†’</span>
               </button>
           </div>
        </div>
      ))}
    </div>
  </div>
</section>
