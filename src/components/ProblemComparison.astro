---
const features = [
  {
    name: "Optimization",
    traditional: "Manual, once a quarter",
    skyabove: "Continuous, real-time, AI-driven",
  },
  {
    name: "Scaling",
    traditional: "Hire more people",
    skyabove: "Deploy more agents",
  },
  {
    name: "Personalization",
    traditional: "Basic segments",
    skyabove: "1:1 AI-powered personalization",
  },
  {
    name: "Reporting",
    traditional: "Static PDF decks",
    skyabove: "Live dashboards + predictive insights",
  },
  {
    name: "AI Integration",
    traditional: "Sprinkled on as a buzzword",
    skyabove: "Embedded in every workflow",
  },
  {
    name: "Deliverables",
    traditional: "Campaigns and reports",
    skyabove: "AI capabilities that compound",
  },
];
---

<section class="section-padding relative overflow-hidden">
  <div class="container-custom">
    <div class="text-center mb-16 space-y-4" data-reveal="up">
      <h2 class="text-3xl md:text-5xl font-bold">
        They Call It "AI." <br class="md:hidden" />We Call It Copy-Paste.
      </h2>
      <p class="text-sky-muted text-lg max-w-2xl mx-auto">
        See the difference between theater and engineering.
      </p>
    </div>

    <!-- Mobile View (Cards) -->
    <div class="space-y-6 md:hidden px-4" data-stagger>
      {
        features.map((feature, index) => (
          <div
            class="bg-sky-card/30 border border-sky-card rounded-xl p-6 relative overflow-hidden group shadow-lg"
            data-reveal="up"
            style={`transition-delay: ${index * 100}ms`}
          >
            <h3 class="font-bold text-white text-xl mb-5 pb-2 border-b border-sky-card/50">
              {feature.name}
            </h3>

            <div class="space-y-4">
              <div>
                <div class="text-[10px] uppercase tracking-wider text-sky-muted mb-1 font-semibold">
                  Traditional Agency
                </div>
                <div class="text-sky-muted/80">{feature.traditional}</div>
              </div>

              <div class="p-3 bg-sky-blue/5 border-l-2 border-sky-blue rounded-r-lg group-hover:bg-sky-blue/10 transition-colors">
                <div class="text-[10px] uppercase tracking-wider text-sky-blue mb-1 font-bold">
                  SkyAbove
                </div>
                <div class="text-white font-bold">{feature.skyabove}</div>
              </div>
            </div>
            <div class="absolute inset-y-0 right-0 w-1 bg-sky-blue/50 opacity-0 group-hover:opacity-100 transition-opacity" />
          </div>
        ))
      }
    </div>

    <!-- Desktop View (Table) -->
    <div
      class="hidden md:block relative overflow-hidden rounded-xl border border-sky-card bg-sky-card/30 backdrop-blur-sm shadow-2xl"
      data-reveal="up"
    >
      <table class="w-full text-left border-collapse">
        <thead>
          <tr class="border-b border-sky-card">
            <th
              class="p-6 text-sm font-bold uppercase tracking-wider text-sky-muted w-1/3"
              >Feature</th
            >
            <th
              class="p-6 text-sm font-bold uppercase tracking-wider text-sky-muted w-1/3"
              >Traditional Agency</th
            >
            <th
              class="p-6 text-sm font-bold uppercase tracking-wider text-sky-blue w-1/3 bg-sky-blue/5"
              >SkyAbove</th
            >
          </tr>
        </thead>
        <tbody class="divide-y divide-sky-card" data-stagger>
          {
            features.map((feature, index) => (
              <tr
                class="group hover:bg-sky-card/50 transition-colors duration-200"
                data-reveal="left"
                style={`transition-delay: ${index * 100}ms`}
              >
                <td class="p-6 font-medium text-white">{feature.name}</td>
                <td class="p-6 text-sky-muted">{feature.traditional}</td>
                <td class="p-6 text-white font-bold bg-sky-blue/5 group-hover:bg-sky-blue/10 transition-colors border-l border-sky-card relative">
                  {feature.skyabove}
                  <div class="absolute inset-y-0 right-0 w-1 bg-sky-blue/50 opacity-0 group-hover:opacity-100 transition-opacity" />
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
</section>
