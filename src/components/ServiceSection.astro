---
interface Props {
    title: string;
    description: string;
    deliverables: string[];
    icon: string;
    image: string;
    reversed?: boolean;
}

const {
    title,
    description,
    deliverables,
    icon,
    image,
    reversed = false,
} = Astro.props;
---

<section
    class="section-padding border-b border-sky-card/30 relative overflow-hidden"
>
    <div
        class="container-custom grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
    >
        <!-- Text Content -->
        <div class={`space-y-8 ${reversed ? "lg:order-2" : ""}`}>
            <div
                class="w-16 h-16 bg-sky-blue/10 rounded-xl flex items-center justify-center text-3xl text-sky-blue border border-sky-blue/20"
            >
                <Fragment set:html={icon} />
            </div>

            <h2 class="text-3xl md:text-4xl font-bold">{title}</h2>
            <p class="text-xl text-sky-muted leading-relaxed">
                {description}
            </p>

            <div class="space-y-4 pt-4">
                <h3
                    class="text-sm font-bold uppercase tracking-wider text-sky-amber"
                >
                    Deliverables
                </h3>
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    {
                        deliverables.map((item) => (
                            <li class="flex items-start space-x-3 text-sky-muted">
                                <span class="text-sky-blue mt-1.5 text-xs">
                                    ‚óè
                                </span>
                                <span>{item}</span>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <!-- Visual / Graphic placeholder -->
        <div
            class={`relative h-[400px] rounded-2xl border border-sky-card overflow-hidden group ${reversed ? "lg:order-1" : ""}`}
        >
            <img
                src={image}
                alt={`${title} visualization`}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out"
            />
        </div>
    </div>
</section>
